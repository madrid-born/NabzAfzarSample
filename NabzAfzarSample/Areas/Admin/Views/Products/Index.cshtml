@model List<NabzAfzarSample.Models.Product>

<h2>Products</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">New Product</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Active</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@p.Category.Name</td>
            <td>@p.Price</td>
            <td>
                @p.StockQuantity
                @if (p.StockQuantity <= 5)
                {
                    <span class="badge bg-warning text-dark ms-2">Low</span>
                }
            </td>
            <td>@p.IsActive</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary"
                   asp-action="Edit" asp-route-id="@p.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>